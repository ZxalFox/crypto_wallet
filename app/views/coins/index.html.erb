<p style="color: green"><%= notice %></p>

<% content_for :title, "Coins" %>

<h1 class="text-light">
    <%= t('coins') %> </h1>

<div id="coins">
    <% @coins.each do |coin| %>
    <div class="coin-container">
        <%= render coin %>

        <div class="d-flex justify-content-end">

            <p>
                <%= link_to t('show_coin'), coin, class: "btn btn-sm btn-warning me-3" %>
            </p>

            <p>
                <%= link_to t('add_historical_price'), new_historical_price_path(coin_id: coin.id), class: "btn btn-sm bg-dark text-warning text-decoration-underline" %>
            </p>
        </div>


    </div>
    <hr>
    <% end %>
</div>

<div class="d-flex justify-content-end">
    <%= link_to t('new_coin'), new_coin_path, class: "btn btn-warning fs-6" %>
</div>